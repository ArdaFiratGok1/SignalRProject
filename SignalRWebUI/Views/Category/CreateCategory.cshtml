@using SignalRWebUI.Dtos.CategoryDtos

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateCategoryDto
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Forms</h4>
		<div class="row">
			<div class="col-md-6">
                <form method="post" asp-controller="Category" asp-action="CreateCategory">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Kategori Adı:</label>
                                <input type="text" class="form-control" id="categoryname" asp-for="CategoryName" placeholder="Kategori Adını Giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </div>
                    </div>
                </form>
			</div>
			
		</div>
	</div>
</div>

