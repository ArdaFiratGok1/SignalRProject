@using SignalRWebUI.Dtos.BookingDtos
@model List<ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Rezarvasyon Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Rezarvasyon Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Rezarvasyon alanıyla ilgili işlemleri yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Telefon</th>
									<th scope="col">Kişi Sayısı</th>
									<th scope="col">Rezarvasyon Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.BookingName</td>
										<td>@item.BookingPhone</td>
										<td>@item.PersonCount</td>
										<td>Rezervasyon Alındı</td>
										<td><a href="/Contact/DeleteContact/@item.BookingID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.BookingID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni İletişim Yazısı Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>